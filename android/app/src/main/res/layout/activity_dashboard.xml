<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- En-tÃªte avec gradient subtil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/dashboard_header_bg"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet Narcisse"
                android:textSize="16sp"
                android:textColor="@color/md_theme_light_primary"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="4dp" />

            <!-- Message de bienvenue stylisÃ© -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                android:letterSpacing="0.01"
                tools:text="Bonjour, Lucas" />
        </LinearLayout>

        <!-- Card Statistiques avec couleur plus claire -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/stats_card_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Statistiques du jour"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="24dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:gravity="center">

                    <!-- Embarquements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/todayCheckinsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_light_primary"
                            android:layout_marginBottom="8dp"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â›µ Embarquements"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- SÃ©parateur vertical -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="80dp"
                        android:background="@color/md_theme_light_outlineVariant" />

                    <!-- Paiements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/todayPaymentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_light_secondary"
                            android:layout_marginBottom="8dp"
                            tools:text="450â‚¬" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’° EncaissÃ©s"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions rapides -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions rapides"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            android:letterSpacing="0.05"
            android:layout_marginBottom="16dp" />

        <!-- Bouton Scanner QR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanQrButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:text="Scanner QR Code"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_qr_scan"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Bouton Nouveau Paiement -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/newPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:text="Nouveau paiement"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_payment"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Bouton Historique -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Historique des rÃ©servations"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_history"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>
