<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Message de bienvenue -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="Bonjour, Jean" />

        <!-- Card Statistiques -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aujourd'hui"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Embarquements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/todayCheckinsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"
                            tools:text="12 embarquements" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Check-ins"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <!-- Paiements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/todayPaymentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorSecondary"
                            tools:text="450 €" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Encaissés"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions rapides -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions rapides"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- Bouton Scanner QR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanQrButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Scanner QR Code"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Bouton Nouveau Paiement -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/newPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:text="Nouveau paiement"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconSize="32dp"
            app:iconGravity="textStart"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.TonalButton" />

        <!-- Bouton Historique -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historique"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:iconGravity="textStart"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>
