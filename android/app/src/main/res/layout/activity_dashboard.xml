<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_surface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- En-tête avec gradient - étend jusqu'en haut -->
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dashboard_header_bg">

                <!-- Spacer pour status bar + display cutout -->
                <View
                    android:id="@+id/statusBarSpacer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <!-- Row: Titre + Bouton Settings -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sweet Narcisse"
                            android:textSize="13sp"
                            android:textColor="#FFFFFFCC"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.08"
                            android:layout_marginBottom="4dp" />

                        <!-- Message de bienvenue stylisé -->
                        <TextView
                            android:id="@+id/welcomeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:letterSpacing="0.01"
                            tools:text="Bonjour, Lucas" />
                    </LinearLayout>

                    <!-- Bouton Déconnexion -->
                    <ImageButton
                        android:id="@+id/logoutButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Déconnexion"
                        android:tint="@android:color/white"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- Espace en bas du header -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>

            <!-- Contenu avec padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

        <!-- Card Statistiques - Design Premium -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistiques du jour"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:letterSpacing="0.04"
                    android:textAllCaps="true"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Embarquements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="12dp">

                        <TextView
                            android:id="@+id/todayCheckinsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/md_theme_light_primary"
                            android:layout_marginBottom="4dp"
                            tools:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Embarquements"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>

                    <!-- Séparateur vertical -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/md_theme_light_outlineVariant"
                        android:layout_marginHorizontal="8dp" />

                    <!-- Paiements -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/todayPaymentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="32sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/stats_success"
                            android:layout_marginBottom="4dp"
                            tools:text="0 €" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Encaissés"
                            android:textSize="13sp"
                            android:textColor="@color/md_theme_light_onSurfaceVariant" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Actions rapides -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions rapides"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onSurfaceVariant"
            android:letterSpacing="0.05"
            android:layout_marginBottom="16dp" />

        <!-- Bouton Scanner QR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/scanQrButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:text="Scanner QR Code"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_qr_scan"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Bouton Nouveau Paiement -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/newPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:text="Nouveau paiement"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_payment"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:cornerRadius="16dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- Bouton Historique -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Historique des réservations"
            android:textSize="15sp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_history"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
