[Unit]
Description=Sweet Narcisse Database Restore Test Timer
Documentation=https://github.com/sweet-narcisse/docs/backup-guide.md

[Timer]
# Run monthly on the 15th at 4:00 AM
OnCalendar=*-*-15 04:00:00
# Add randomized delay of 0-30 minutes
RandomizedDelaySec=1800
# Persist timer across reboots
Persistent=true
AccuracySec=1h

[Install]
WantedBy=timers.target
